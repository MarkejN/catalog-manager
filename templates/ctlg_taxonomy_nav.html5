<ul>
   <?php foreach( $this->arrItems as $arrItem ): ?>
      <li class="<?= $arrItem['class'] ?>">
         <?php if ( $arrItem['active'] ): ?>
            <strong><?= $arrItem['title'] ?></strong><?= $arrItem['subItems'] ?>
         <?php else: ?>
            <a href="<?= $arrItem['href'] ?>"><?= $arrItem['title'] ?></a>
         <?php endif; ?>
      </li>
   <?php endforeach; ?>
</ul>